
<h1 class="title">Ratings<span class="emoji">📝</span></h1>

<div class="text">
 <%= "Total ratings: " + @ratings.count.to_s %>
 <br>
  <%= link_to "Create new rating", new_rating_path if current_user %> 
</div>

<div class="grid-container">
  <div class="flex-container">
    <div class="unit">
      <h2 class="title">Top beers</h2>
        <% Beer.top(3).each do |beer| %>
        <%= "#{beer.name} average of #{beer.average_rating}" %>
        <br>
        <% end %>
    </div>
    <div class="unit">
    <h2 class="title">Top breweries</h2>
      <% Brewery.top(3).each do |brewery| %>
        <%= "#{brewery.name} average of #{brewery.average_rating}"%>
        <br>
      <% end %>
    </div>
    <div class="unit">
    <h2 class="title">Top styles</h2>
      <% Style.top(3).each do |style| %>
      <%= "#{style.name} average of #{style.average} "%>
      <br>
      <% end %>
    </div>
        <div class="unit">
    <h2 class="title">Most active users</h2>
      <% User.top(3).each do |user| %>      
        <%= "#{user} with #{pluralize(user.ratings.count,'rating')} "%>
      <br>
      <% end %>
    </div>
  </div>
</div>

  

<h2 class="title">Recent ratings</h2>
<div class="flex-container">
  <% @ratings.recent.each do |rating| %>
  <div class= "unit">
    <%= render rating %> 
    Made by: 
    <%= link_to rating.user.username, rating.user %>  
    <%= rating.created_at %>
    </div>
  <% end %>
</div>
