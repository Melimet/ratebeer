<p class="text"><%= link_to "New brewery", new_brewery_path if current_user %> <br>

<h2 class="title">Active</h2>
<p class="text">Number of active breweries: <%= @active_breweries.count %></p>

<div class="flex-container">
  <% @active_breweries.each do |brewery| %>
  <div class="unit">
      <p>
        <strong>Name:</strong>
        <%= link_to brewery.name, brewery %>
      </p> 
      <p>
        <strong>Year:</strong>
        <%= brewery.year %>
      </p>
    </div>
  <% end %>
</div>
<h2 class="title">Retired</h2>
<p class="text">Number of retired breweries: <%= @retired_breweries.count %></p>

<div class="flex-container">
  <% @retired_breweries.each do |brewery| %>
  <div class="unit">
      <p>
        <strong>Name:</strong>
        <%= link_to brewery.name, brewery %>
      </p> 
      <p>
        <strong>Year:</strong>
        <%= brewery.year %>
      </p>
    </div>
  <% end %>
</div>

